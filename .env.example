# Environment
NODE_ENV=development  # Options: development, staging, production

# Firebase Configuration - Development
VITE_FIREBASE_DEV_API_KEY=your_dev_api_key_here
VITE_FIREBASE_DEV_AUTH_DOMAIN=lawnsync-app-dev.firebaseapp.com
VITE_FIREBASE_DEV_PROJECT_ID=lawnsync-app-dev
VITE_FIREBASE_DEV_STORAGE_BUCKET=lawnsync-app-dev.appspot.com
VITE_FIREBASE_DEV_MESSAGING_SENDER_ID=your_dev_messaging_sender_id_here
VITE_FIREBASE_DEV_APP_ID=your_dev_app_id_here

# Firebase Configuration - Staging
VITE_FIREBASE_STAGING_API_KEY=your_staging_api_key_here
VITE_FIREBASE_STAGING_AUTH_DOMAIN=lawnsync-app-staging.firebaseapp.com
VITE_FIREBASE_STAGING_PROJECT_ID=lawnsync-app-staging
VITE_FIREBASE_STAGING_STORAGE_BUCKET=lawnsync-app-staging.appspot.com
VITE_FIREBASE_STAGING_MESSAGING_SENDER_ID=your_staging_messaging_sender_id_here
VITE_FIREBASE_STAGING_APP_ID=your_staging_app_id_here

# Firebase Configuration - Production
VITE_FIREBASE_PROD_API_KEY=your_prod_api_key_here
VITE_FIREBASE_PROD_AUTH_DOMAIN=lawnsync-app.firebaseapp.com
VITE_FIREBASE_PROD_PROJECT_ID=lawnsync-app
VITE_FIREBASE_PROD_STORAGE_BUCKET=lawnsync-app.appspot.com
VITE_FIREBASE_PROD_MESSAGING_SENDER_ID=your_prod_messaging_sender_id_here
VITE_FIREBASE_PROD_APP_ID=your_prod_app_id_here

# Firebase Emulator Configuration
USE_EMULATORS=false
VITE_FIREBASE_AUTH_EMULATOR_URL=http://localhost:9099
VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost
VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8080
VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost
VITE_FIREBASE_STORAGE_EMULATOR_PORT=9199

# Feature Flags
VITE_USE_MOCK_FIREBASE=false

# OpenWeatherMap API Configuration
VITE_OPENWEATHER_API_KEY_DEV=your_dev_openweather_api_key_here
VITE_OPENWEATHER_API_KEY_STAGING=your_staging_openweather_api_key_here
VITE_OPENWEATHER_API_KEY_PROD=your_prod_openweather_api_key_here
VITE_USE_MOCK_WEATHER=true  # Set to false in production
VITE_WEATHER_CACHE_DURATION=1800000  # 30 minutes in milliseconds

# OpenAI API Configuration
VITE_OPENAI_API_KEY_DEV=your_dev_openai_api_key_here
VITE_OPENAI_API_KEY_STAGING=your_staging_openai_api_key_here
VITE_OPENAI_API_KEY_PROD=your_prod_openai_api_key_here
VITE_USE_MOCK_OPENAI=true  # Set to false in production
VITE_OPENAI_MODEL=gpt-3.5-turbo  # Model to use for recommendations
VITE_OPENAI_CACHE_DURATION=86400000  # 24 hours in milliseconds
VITE_OPENAI_RATE_LIMIT=50  # Max API calls per hour
VITE_OPENAI_TIMEOUT=10000  # API request timeout in milliseconds